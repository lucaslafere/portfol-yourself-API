generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  password   String
  admins     admins?
  portfolios portfolios?
}

model portfolios {
  id      Int      @id @default(autoincrement())
  title   String   @unique @db.VarChar(20)
  userId  Int      @unique
  logo    String
  user    users    @relation(fields: [userId], references: [id])
  admins  admins?
  items   items[]
  layouts layouts?
}

model items {
  id          Int        @id @default(autoincrement())
  title       String     @db.VarChar(20)
  imageUrl    String
  description String    @db.VarChar(30)
  portfolioId Int
  portfolio   portfolios @relation(fields: [portfolioId], references: [id])
  price Int?
}

model admins {
  id          Int        @id @default(autoincrement())
  portfolioId Int        @unique
  userId      Int        @unique
  portfolio   portfolios @relation(fields: [portfolioId], references: [id])
  user        users      @relation(fields: [userId], references: [id])
}

model layouts {
  id          Int          @id @default(autoincrement())
  portfolioId Int          @unique
  boxSize     boxSizeTypes @default(medium)
  style       styleTypes   @default(classic)
  isStore     Boolean      @default(false)
  portfolio   portfolios   @relation(fields: [portfolioId], references: [id])
}

enum boxSizeTypes {
  small
  medium
  large
}

enum styleTypes {
  classic
  modern
}
