// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  portfolios portfolios[]
  admins admins[]
}
model portfolios {
  id Int @id @default(autoincrement())
  title String @unique @db.VarChar(20)
  userId Int
  user users @relation(fields: [userId], references: [id])
  items items[]
  admins admins[]
  layouts layouts[]
  logo String 
}
model items {
  id Int @id @default(autoincrement())
  title String @db.VarChar(20)
  imageUrl  String
  description String? @db.VarChar(30)
  portfolioId Int
  portfolio portfolios @relation(fields: [portfolioId], references: [id])
}
model admins {
  id Int @id @default(autoincrement())
  portfolioId Int
  portfolio portfolios @relation(fields: [portfolioId], references: [id])
  userId Int
  user users @relation(fields: [userId], references: [id])
}

enum boxSizeTypes {
  small
  medium
  large
}

enum styleTypes {
  classic
  modern
}

model layouts {
  id Int @id @default(autoincrement())
  portfolioId Int
  portfolio portfolios @relation(fields: [portfolioId], references: [id])
  boxSize boxSizeTypes? @default(medium)
  style styleTypes? @default(classic)
  isStore Boolean? @default(false)
}
